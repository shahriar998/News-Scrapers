<div class="jumbotron jumbotron-fluid text-center">
  <h1 class="display-4">Tech News</h1>
  <p class="lead">Get the latest from TechCrunch</p>
</div>

<div class="container article-container">
  <h3>Articles</h3>
  {{#each articles}}
    <div class="card bg-light mb-3">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <a href="{{link}}" class="card-link" target="_blank">View article on TechCrunch</a>
        <p class="card-text">{{intro}}...</p>
        <a data-articleId="{{_id}}" class="btn btn-primary save-btn">Save article</a>
      </div>
    </div>
  {{/each}}
</div>
